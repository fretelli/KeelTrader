# AIWendy Cloud/SaaS Environment Configuration Example
# This is for managed cloud deployments with multi-tenancy, billing, and enterprise features

# ========== Application ==========
APP_NAME=AIWendy
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# ========== Deployment Mode ==========
# MUST be "cloud" for SaaS deployments
DEPLOYMENT_MODE=cloud

# ========== Database ==========
DATABASE_URL=postgresql+asyncpg://aiwendy:STRONG_PASSWORD@db-host:5432/aiwendy_prod
DATABASE_ECHO=false
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=20

# ========== Redis ==========
REDIS_URL=redis://redis-host:6379/0
REDIS_DECODE_RESPONSES=true

# ========== Celery ==========
CELERY_BROKER_URL=redis://redis-host:6379/0
CELERY_RESULT_BACKEND=redis://redis-host:6379/1

# ========== API URLs ==========
APP_URL=https://api.aiwendy.com
API_URL=https://api.aiwendy.com
FRONTEND_URL=https://app.aiwendy.com

# ========== Auth ==========
JWT_SECRET=GENERATE_STRONG_SECRET_KEY_HERE_MIN_64_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=30

# ========== LLM API Keys ==========
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# ========== LLM Settings ==========
LLM_DEFAULT_PROVIDER=openai
LLM_DEFAULT_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7
LLM_STREAM_ENABLED=true

# ========== Rate Limiting ==========
RATE_LIMIT_ENABLED=true
RATE_LIMIT_FREE_CHAT_HOURLY=20
RATE_LIMIT_FREE_JOURNAL_DAILY=5
RATE_LIMIT_PRO_CHAT_HOURLY=200
RATE_LIMIT_PRO_JOURNAL_DAILY=100

# ========== Monitoring ==========
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ========== CORS ==========
CORS_ORIGINS=["https://app.aiwendy.com", "https://www.aiwendy.com"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# ========== Logging ==========
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========== Feature Flags ==========
FEATURE_ANALYTICS_ENABLED=true
FEATURE_MULTI_COACH_ENABLED=true
FEATURE_VOICE_ENABLED=true
FEATURE_KNOWLEDGE_BASE_ENABLED=true

# ========== Cloud-Only Features ==========

# Multi-Tenancy (REQUIRED for cloud mode)
MULTI_TENANCY_ENABLED=true
TENANT_ISOLATION_STRICT=true

# Usage Analytics (REQUIRED for cloud mode)
ANALYTICS_PROVIDER=posthog
POSTHOG_API_KEY=YOUR_POSTHOG_PROJECT_API_KEY_HERE
POSTHOG_HOST=https://app.posthog.com
# Alternative: Mixpanel
# ANALYTICS_PROVIDER=mixpanel
# MIXPANEL_TOKEN=your_mixpanel_token

# Enterprise SSO (REQUIRED for enterprise plans)
ENTERPRISE_SSO_ENABLED=true
SAML_ENABLED=true
SAML_ENTITY_ID=https://api.aiwendy.com/saml/metadata
SAML_SSO_URL=https://api.aiwendy.com/saml/sso
SAML_X509_CERT=YOUR_X509_CERTIFICATE_HERE
OAUTH_PROVIDERS=["google", "github", "azure", "okta"]

