# ========== Database ==========
DB_HOST=db
DB_PORT=5432
DB_NAME=keeltrader
DB_USER=keeltrader
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql+asyncpg://keeltrader:your_secure_password_here@db:5432/keeltrader

# ========== Redis ==========
REDIS_URL=redis://redis:6379/0

# ========== LLM API Keys ==========
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# ========== Auth ==========
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=30
JWT_ALGORITHM=HS256
KEELTRADER_AUTH_REQUIRED=0
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ========== Sentry ==========
SENTRY_DSN=https://xxx@sentry.io/xxx

# ========== PostHog ==========
NEXT_PUBLIC_POSTHOG_KEY=YOUR_POSTHOG_PROJECT_API_KEY_HERE
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ========== Application ==========
APP_NAME=Keel Trader
APP_VERSION=1.0.0
APP_ENV=development
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ========== Rate Limiting ==========
RATE_LIMIT_FREE_CHAT_HOURLY=20
RATE_LIMIT_FREE_JOURNAL_DAILY=5
RATE_LIMIT_PRO_CHAT_HOURLY=100
RATE_LIMIT_PRO_JOURNAL_DAILY=50

# ========== Logging ==========
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========== Environment ==========
NODE_ENV=development
PYTHON_ENV=development

# ========== Docker Auto Init ==========
# Set to 0 to disable automatic DB/test-user initialization on container startup.
KEELTRADER_AUTO_INIT_DB=1
# For open-source self-hosting, keep this off by default (enable for local dev only).
KEELTRADER_AUTO_INIT_TEST_USERS=0
